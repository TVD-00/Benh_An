PORT=3000

# MongoDB (Comments)
DATABASE_URL=mongodb://127.0.0.1:27017/benh_an

# Admin
ADMIN_PASSWORD=secret
ADMIN_TOKEN_SECRET=supersecret

# Admin token TTL (ms)
ADMIN_TOKEN_TTL_MS=43200000

# User auth (for feedback/commenting)
USER_TOKEN_SECRET=supersecret_user
USER_TOKEN_TTL_MS=604800000

# Feedback rate limit (per IP)
FEEDBACK_RATE_LIMIT_MAX=20
FEEDBACK_RATE_LIMIT_WINDOW_MS=60000

# Optional: hash IP to reduce spam (do not store raw IP)
IP_HASH_SECRET=supersecret_ip

# OpenRouter (AI)
OPENROUTER_API_KEY=your_openrouter_key
CUSTOM_MODEL=google/gemini-2.0-flash-001

# Optional fallback when upstream 429
FALLBACK_MODEL=

# Chat config
CHAT_MAX_CONTEXT=8000
CHAT_MAX_OUTPUT=4000
CHAT_AUTO_SUMMARIZE=true

# Rate limit (per IP)
CHAT_RATE_LIMIT_MAX=20
CHAT_RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGINS=http://localhost:5173
